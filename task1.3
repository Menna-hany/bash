#!/bin/bash 
set -x 
cd /media 
if [ ! -d mybackup ]
then 
	mkdir mybackup 
fi
cd mybackup 
count=`find . -name '*.backup#*' | wc -l `
if [ $count -gt 0 ]
then 
	echo found 
else    
	d=`date +%b-%d`
	touch $d.backup\#01 
fi

